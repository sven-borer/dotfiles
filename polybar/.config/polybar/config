; vim: filetype=dosini

[colors]
transparent = #aa393939
bar = #aa222222 

[bar/top]
width = 100%
height = 25 
fixed-center = true 

background = ${colors.bar} 

module-margin-left = 0 
module-margin-right = 0 

font-0 = MiscTamsyn:size=11;0 

modules-left = i3 mpd
modules-center = time 
modules-right = cpu memory wlan volume backlight battery 

[module/updates]
type = custom/script

exec = 
interval = 120

format = <label>
format-padding = 3
format-background = ${colors.transparent}

label = %output%

[module/i3]
type = internal/i3

index-sort = true
pin-workspaces = true

format = <label-state>

label-focused = %icon%
label-focused-padding = 3 
label-focused-background = ${colors.transparent}
label-unfocused = %icon%
label-unfocused-padding = 3

ws-icon-0 = 0;0
ws-icon-1 = 1;1
ws-icon-2 = 2;2
ws-icon-3 = 3;3
ws-icon-4 = 4;4
ws-icon-5 = 5;5
ws-icon-6 = 6;6
ws-icon-7 = 7;7
ws-icon-8 = 8;8
ws-icon-9 = 9;9
ws-icon-default =   

[module/backlight]
type = internal/backlight

card = intel_backlight

format = <label>
format-padding = 3
format-background = ${colors.transparent}

label = BLT %percentage%

[module/wlan]
type = internal/network

interface = wlp3s0 
interval = 3.0

format-connected = <label-connected>
format-connected-background = ${colors.transparent}
format-connected-padding = 3
format-disconnected = <label-disconnected> 
format-disconnected-background = ${colors.transparent}
format-disconnected-padding = 3

label-connected = WIFI %essid%
label-disconnected = WIFI DISCONNECTED 

[module/time]
type = internal/date

interval = 10
time = %a %d.%m.%Y %H:%M

format = <label>
format-background = ${colors.transparent}
format-padding = 3

label = %time%

[module/cpu]
type = internal/cpu

interval = 1

format = <label>
format-padding = 3

label = CPU %percentage%

[module/memory]
type = internal/memory

interval = 3

format = <label>
format-padding = 3

label = MEM %percentage_used%

[module/volume]
type = internal/volume

enable-scroll = false

format-volume = <label-volume>
format-volume-background = ${colors.transparent}
format-volume-padding = 3 
format-muted = <label-muted> 
format-muted-background = ${colors.transparent}
format-muted-padding = 3

label-volume = AUD %percentage%
label-muted = AUD MUTED

[module/battery]
type = internal/battery

battery = BAT1
adapter = ACAD
full-at = 99

format-full = <label-full>
format-full-background = ${colors.transparent}
format-full-padding = 3 
format-charging = <label-charging>
format-charging-background = ${colors.transparent}
format-charging-padding = 3
format-discharging = <label-discharging>
format-discharging-background = ${colors.transparent}
format-discharging-padding = 3

label-full = BAT %percentage% 
label-discharging = BAT %percentage%
label-charging = BAT CHARGING %percentage%

[module/mpd]
type = internal/mpd

host = 127.0.0.1
port = 6600

interval = 1

format-online = <label-song> <label-time>
format-online-padding = 3

label-song = %artist% - %title%
label-song-maxlen = 45
label-song-ellipsis = false
